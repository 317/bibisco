<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="file" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${user.home}/bibisco/log/bibisco.log"/>
    <param name="Append" value="true"/>
    <param name="maxFileSize" value="1000KB" />
    <param name="maxBackupIndex" value="5" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} [%X{remoteIP}] [%X{sessionid}] [%X{connectionId}] %-5p %c - %m%n"/>
    </layout>
  </appender>
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} [%X{remoteIP}] [%X{sessionid}] [%X{connectionId}] %-5p %c - %m%n"/>
    </layout>
  </appender>
  <category name="com.bibisco" additivity="false">
  	<level value="debug"/>
  	<appender-ref ref="file"/><appender-ref ref="console"/>
  </category>
  <category name="org.apache.ibatis" additivity="false">
  	<level value="debug"/>
  	<appender-ref ref="file"/><appender-ref ref="console"/>
  </category>
  <category name="org.eclipse.jetty" additivity="false">
  	<level value="debug"/>
  	<appender-ref ref="file"/><appender-ref ref="console"/>
  </category>
  <category name="java.sql" additivity="false">
  	<level value="debug"/>
  	<appender-ref ref="file"/><appender-ref ref="console"/>
  </category>
   <category name="test" additivity="false">
  	<level value="debug"/>
  	<appender-ref ref="file"/><appender-ref ref="console"/>
  </category>
  <root>
    <priority value ="off"/>
  </root>
</log4j:configuration>